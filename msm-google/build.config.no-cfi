KERNEL_DIR=private/msm-google
. ${ROOT_DIR}/${KERNEL_DIR}/build.config.common.clang
POST_DEFCONFIG_CMDS="check_defconfig && update_nocfi_config"

function update_nocfi_config() {
  # Disable clang-specific options
  ${KERNEL_DIR}/scripts/config --file ${OUT_DIR}/.config \
    -e HAVE_LOW_MEMORY_KILLER \
    -e ANDROID_LOW_MEMORY_KILLER \
    -e APP_AWARE \
	-e CONFIG_PROCESS_RECLAIM \
	-e CONFIG_BLK_DEV_IO_TRACE \
	-e NO_READAHEAD \
    -m CONFIG_BLK_DEV_NBD \
	-d LTO \
    -d LTO_CLANG \
    -d CFI \
    -d CFI_PERMISSIVE \
    -d CFI_CLANG
  (cd ${OUT_DIR} && \
    make O=${OUT_DIR} $archsubarch CROSS_COMPILE=${CROSS_COMPILE} olddefconfig)
}
